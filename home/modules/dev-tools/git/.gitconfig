[user]
   name = Jaakko Paju
   email = 36770267+JPaju@users.noreply.github.com
[core]
   pager = delta
[init]
   defaultBranch = main
[fetch]
   prune = true
[pull]
   rebase = true
[push]
   default = current
   autoSetupRemote = true
[rebase]
   autoStash = true
   updateRefs = true
[rerere]
   enabled = true
[alias]
   localprune = !git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D

[includeIf "gitdir:~/work/"]
   path = ~/.gitconfig-work

[interactive]
   diffFilter = "delta --color-only"
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[include]
    path = ~/.catppuccin.gitconfig
[delta]
   features = decorations catppuccin-macchiato
   line-numbers = true

